/* components/itemview/itemview.wxss */
.item-navigator {
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;  /* 使scrollview中的item在一行中显示的必要设置 */
}

/* .item-navigator:last-of-type {
  margin-right: 0;
} */

.item-navigator .item-group {
  width: 100%;
}

.item-group .thumbnail-group {
  width: 100%;
  height: 284rpx;
}

.thumbnail-group .thumbnail {
  width: 100%;
  height: 100%;
}

.item-group .item-title {
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-overflow: ellipsis;  /* 文本过长显示... */
  overflow: hidden;  /* 文本过长显示... */
}