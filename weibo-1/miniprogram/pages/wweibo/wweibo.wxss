/* pages/wweibo/wweibo.wxss */
.container {
  padding: 40rpx 60rpx;
}

.container .textarea {
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
}

.container .image-list-group {
  padding-top: 20rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.image-list-group .image-group {
  margin-right: 5rpx;
  margin-bottom: 5rpx;
  position: relative;  /* 在不设置偏移量时，relative定位不会与默认静态定位产生位置上的区别 */
}

.image-list-group .image-group image {
  width: 100%;
  height: 100%;
}

.image-list-group .image-group .close-btn {
  width: 60rpx;
  height: 60rpx;
  position: absolute;  /* close-btn会以父元素中第一个非静态定位的元素为基准进行绝对定位，这里即为relative定位的image-group */
  right: -30rpx;
  top: -30rpx;
  z-index: 1;  /* 防止多张图片时被其他图片遮挡 */
  background-size: 50rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-image: url("data:image/png;base64,");
}

.image-list-group .add-image-btn {
  font-size: 200rpx;
  background-color: #f2f2f2;
  color: #a9a9a9;
  display: flex;
  justify-content: center;
  align-items: center;

}

.add-image-btn view {
  margin-top: -20rpx;
}

.container .location-group {
  margin-top: 40rpx;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-group .left-group {
  display: flex;
  font-size: 28rpx;
}

.left-group .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}

.location-group .arrow {
  width: 40rpx;
  height: 40rpx;
}

.submit-btn {
  margin-top: 40rpx;
}