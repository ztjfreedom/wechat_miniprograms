/* customcomponents/segment/segment.wxss */
.segment-group {
  width: 100%;
}

.segment-header {
  width: 100%;
  height: 50rpx;
  border: 1px solid #e4e4e4;
  border-radius: 10px;
  display: flex;
}

.segment-header .active {
  background-color: #1AAD16;
  color: #fff;
}

.segment-item {
  flex: 1;
  border-right: 1px solid #e4e4e4;
  font-size: 14px;
  /* 设置内部文字水平垂直居中 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* segment-item中最后一个不需要右边框 */
.segment-item:last-of-type {
  border: none;
}

.segment-body {
  width: 100%;
}