<!--miniprogram/pages/redpocket/redpocket.wxml-->
<scroll-view class='scroll-view' scroll-y style='height:{{windowHeight}}px' bindscroll='scrollEvent'>
  <view class='circle-outter'>
    <view class='circle-inner'>
      <view class='circle' style='width:{{radius*2*2}}rpx; height:{{radius*2*2}}rpx; left:{{left*2}}rpx;'></view>
    </view>
    <view class='user-group'>
      <image class='avatar' src='../../images/avatar.jpg'></image>
      <view class='username'>蜘蛛侠的红包</view>
    </view>
  </view>
  <view class='placeholder'></view><!-- 用于占位 -->
</scroll-view>