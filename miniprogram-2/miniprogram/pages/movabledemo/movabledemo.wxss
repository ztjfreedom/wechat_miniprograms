/* miniprogram/pages/movabledemo/movabledemo.wxss */
.area {
  width: 100%;
  height: 600rpx;
  background-color: blue;
  overflow: hidden;
}

.area .view {
  width: 200rpx;
  height: 200rpx;
  background-color: red;
}

.listview {
  width: 100%;
  height: 1000rpx;
  background-color: #ccc;
}

.listview .itemview {
  width: 100%;
  height: 200rpx;
  background-color: pink;
  display: flex;
  justify-content: flex-start;
}

.itemview .movablearea {
  height: 100%;
  background-color: burlywood;
}

.movablearea .movableview {
  height: 100%;
  background-color: skyblue;
}

.itemview .deleteview {
  width: 200rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: red;
}