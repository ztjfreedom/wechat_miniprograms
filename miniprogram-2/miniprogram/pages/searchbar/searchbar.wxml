    <icon type="search" class="search-icon" size="40rpx"></icon>
    <input class="search-input" placeholder="请输入关键字" placeholder-style="font-size:28rpx" value="{{value}}"></input>
    <icon type="clear" class="clear-icon" size="40rpx" bindtap="onClear"></icon>
  </view>
</view>